<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"

    tools:context=".Nurseryclass.Unit5.B_alphabet">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/numeral_onebg"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="#FF5722"
                android:layout_height="wrap_content"
                android:text="Alphabet 'B'."
                android:textSize="30sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#151515"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap on all the ' B b ' letter words. "
                android:textSize="22sp" />


            <Button
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nextView"
                android:text="Next"
                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/b_bg"
            android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="150dp"
        android:id="@+id/bag"
        android:layout_width="170dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/b_bag" />

            <ImageView
                android:id="@+id/bee"
                android:layout_marginLeft="10dp"
                android:layout_width="174dp"
                android:layout_height="140dp"
                app:srcCompat="@drawable/b_bee" />

            <ImageView
                android:id="@+id/bird"
                android:layout_width="153dp"
                android:layout_height="165dp"
                android:layout_marginLeft="-140dp"
                android:layout_marginTop="180dp"
                app:srcCompat="@drawable/b_bird" />

            <ImageView
                android:id="@+id/bus"
                android:layout_width="163dp"
                android:layout_height="140dp"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/b_bus" />

    <ImageView
        android:id="@+id/bicycle"
        android:layout_width="212dp"
        android:layout_marginLeft="-160dp"
        android:layout_marginTop="180dp"
        android:layout_height="172dp"
        app:srcCompat="@drawable/b_cycle" />

        </LinearLayout>

    </ViewFlipper>

</RelativeLayout>