<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurseryclass.Unit1.Nursery1_alphabets2">

    <FrameLayout
        android:id="@+id/lay_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/n"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="N"
            android:textColor="#009688"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/o"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="O"
            android:textColor="#ED7557"
            android:textSize="110dp"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/p"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="275dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="P"
            android:textColor="#806812"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/q"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="415dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="Q"
            android:textColor="#1EB578"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/r"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="550dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="R"
            android:textColor="#9D21BA"
            android:textSize="110dp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/lay_2"
        android:layout_below="@+id/lay_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="S"
            android:textColor="#009688"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="140dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="T"
            android:textColor="#9D21BA"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/u"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="280dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="U"
            android:textColor="#806812"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/v"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="420dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="V"
            android:textColor="#1EB578"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/w"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="525dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="W"
            android:textColor="#ED7557"
            android:textSize="102dp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/lay_3"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lay_2">

        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginTop="-19dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="X"
            android:textColor="#ED7557"
            android:textSize="110dp" />


        <TextView
            android:id="@+id/y"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-19dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="Y"
            android:textColor="#806812"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/z"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="-19dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="Z"
            android:textColor="#9D21BA"
            android:textSize="110dp" />

    </FrameLayout>

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
       android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:text="Next" />


   </RelativeLayout>