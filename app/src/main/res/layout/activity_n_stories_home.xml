<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stories_bgg"
    tools:context=".Unit1.Nursery.N_stories_home">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageButton

            android:id="@+id/school"
            android:layout_width="133dp"
            android:layout_height="132dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/activty_bu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:textAlignment="center"
            android:fontFamily="@font/primer_print_bold"
            android:text="Falling in\nlove with\nschool"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="center_horizontal" />


        <ImageButton
            android:id="@+id/story_anna"
            android:layout_width="133dp"
            android:layout_height="130dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/activty_bu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="Ana and \nthe earth"
            android:textColor="#000"
            android:textSize="20dp" />

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">



        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/kg_back_icon" />


    </RelativeLayout>

</RelativeLayout>