            app:srcCompat="@drawable/dummy" />

        <ImageView
            android:id="@+id/p3_c_n"
            android:layout_width="88dp"
            android:layout_height="64dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="180dp"
