<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unit1.Seniorkg.Senior1_words1">
    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/numeral_onebg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="#FF5722"
            android:layout_height="wrap_content"
            android:text="Picture words."
            android:textSize="30sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#151515"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag and drop the words to it's picture. "
            android:textSize="22sp" />

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextView"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/creambg"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_gravity="center_horizontal"
        android:layout_width="580dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/pen_c"
            android:layout_width="170dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/word_pen" />

        <ImageView
            android:id="@+id/pen_c_n"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/word_penn" />


        <ImageView
            android:id="@+id/fig_c"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@drawable/word_fig"
            />

        <ImageView
            android:id="@+id/fig_c_n"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:visibility="invisible"
            android:layout_marginLeft="200dp"
            app:srcCompat="@drawable/word_figg" />



        <ImageView
            android:id="@+id/fan_c"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginLeft="400dp"
            app:srcCompat="@drawable/word_fan" />

        <ImageView
            android:id="@+id/fan_c_n"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:visibility="invisible"
            android:layout_marginLeft="400dp"
            app:srcCompat="@drawable/word_fann" />



        <ImageView
            android:id="@+id/lid_c"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="145dp"
            android:layout_marginRight="450dp"
            app:srcCompat="@drawable/word_lid" />

        <ImageView
            android:id="@+id/lid_c_n"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginLeft="90dp"
            android:visibility="invisible"
            android:layout_marginTop="145dp"
            android:layout_marginRight="450dp"
            app:srcCompat="@drawable/word_lidd" />


        <ImageView
            android:id="@+id/mop_c"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="145dp"
            app:srcCompat="@drawable/word_mop"
            />

        <ImageView
            android:id="@+id/mop_c_n"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginLeft="330dp"
            android:visibility="invisible"
            android:layout_marginTop="145dp"
            app:srcCompat="@drawable/word_mopp" />


    </FrameLayout>
<FrameLayout
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/drag_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/primer_print_bold"
        android:text="  fan  "
        android:textColor="#000"
        android:layout_marginLeft="40dp"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/drag_fig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/primer_print_bold"
        android:text="  fig  "
        android:layout_marginLeft="150dp"
        android:textColor="#000"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/drag_pen"
        android:layout_marginLeft="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/primer_print_bold"
        android:text="  pen  "
        android:textColor="#000"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/drag_lid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350dp"
        android:fontFamily="@font/primer_print_bold"
        android:text="  lid  "
        android:textColor="#000"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/drag_mop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450dp"
        android:fontFamily="@font/primer_print_bold"
        android:text="  mop  "
        android:textColor="#000"
        android:textSize="40dp" />
</FrameLayout>
    </LinearLayout>

</ViewFlipper>


</RelativeLayout>