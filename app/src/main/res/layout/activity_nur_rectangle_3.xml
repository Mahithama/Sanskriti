<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurseryclass.Unit3.nur_rectangle_3">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/numeral_onebg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="#FF5722"
            android:layout_height="wrap_content"
            android:text="Shapes 'Rectangle'."
            android:textSize="30sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#151515"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on all the rectangular shaped pictures. "
            android:textSize="22sp" />

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextView"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/shapes_bg"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:id="@+id/framee1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="195dp"
            android:layout_height="340dp"
            app:srcCompat="@drawable/rectangle_bg" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/framee1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tv"
            android:layout_width="144dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/rectangle_1" />

        <ImageView
            android:id="@+id/box"
            android:layout_width="113dp"
            android:layout_height="148dp"
            android:layout_marginLeft="150dp"
            app:srcCompat="@drawable/rectangle_3" />

        <ImageView
            android:id="@+id/casee"
            android:layout_width="147dp"
            android:layout_height="120dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/rectangle_4" />

        <ImageView
            android:id="@+id/vlc"
            android:layout_width="100dp"
            android:layout_height="128dp"
            android:layout_marginTop="130dp"
            app:srcCompat="@drawable/tri_2" />

        <ImageView
            android:id="@+id/gift"
            android:layout_width="153dp"
            android:layout_height="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="160dp"
            app:srcCompat="@drawable/rectangle_2" />
    </FrameLayout>
    </LinearLayout>

</ViewFlipper>

</RelativeLayout>