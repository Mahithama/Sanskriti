<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurseryclass.Unit3.nur_triangle_3">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/numeral_onebg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="#FF5722"
            android:layout_height="wrap_content"
            android:text="Shapes 'Triangle'."
            android:textSize="30sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#151515"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on all the triangle shaped pictures. "
            android:textSize="22sp" />

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextView"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/shapes_bg"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:id="@+id/framee1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tri_bg" />



    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/framee1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pizza"
            android:layout_width="98dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/tri_3" />

        <ImageView
            android:id="@+id/melon"
            android:layout_width="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tri_1" />

        <ImageView
            android:id="@+id/vlc"
            android:layout_width="89dp"
            android:layout_height="132dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/tri_2" />

        <ImageView
            android:id="@+id/tent"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="170dp"
            app:srcCompat="@drawable/tri_4" />

        <ImageView
            android:id="@+id/casee"
            android:layout_width="155dp"
            android:layout_height="129dp"
            android:layout_marginLeft="270dp"
            app:srcCompat="@drawable/rectangle_4" />

    </FrameLayout>
    </LinearLayout>
    </ViewFlipper>







</RelativeLayout>