<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurseryclass.Unit1.Nursery1_alphabets1">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/numeral_onebg"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="#FF5722"
                android:layout_height="wrap_content"
                android:text="Letters A - Z."
                android:textSize="30sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#151515"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap on the alphabets to know their sounds "
                android:textSize="22sp" />

            <Button
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nextView"
                android:text="Next"
                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/lay_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="A"
            android:textColor="#009688"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="170dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="B"
            android:textColor="#ED7557"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="290dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="C"
            android:textColor="#806812"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="420dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="D"
            android:textColor="#1EB578"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="540dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="E"
            android:textColor="#9D21BA"
            android:textSize="110dp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/lay_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_1"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/f"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="F"
            android:textColor="#009688"
            android:textSize="110sp" />

        <TextView
            android:id="@+id/g"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="160dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="G"
            android:textColor="#9D21BA"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/h"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="290dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="H"
            android:textColor="#806812"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/i1"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="440dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="I"
            android:textColor="#1EB578"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/j"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="540dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="J"
            android:textColor="#ED7557"
            android:textSize="110dp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/lay_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_2"
       android:layout_gravity="center_horizontal">


        <TextView
            android:id="@+id/k"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="K"
            android:textColor="#ED7557"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/l"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="140dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="L"
            android:textColor="#806812"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="280dp"
            android:fontFamily="@font/primer_print_bold"
            android:text="M"
            android:textColor="#9D21BA"
            android:textSize="110dp" />

    </FrameLayout>

    </LinearLayout>

</ViewFlipper>

</RelativeLayout>