<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurseryclass.Unit7.X_alphabet">
    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/numeral_onebg"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="70dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                  Alphabet ' X ' words \n\nTap on the pictures to know the names"
                android:textSize="30sp" />

            <Button
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nextView"
                android:text="Next"
                tools:ignore="OnClick" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/x_bg"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/xray"
            android:layout_width="165dp"
            android:layout_height="194dp"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/x_xray" />

        <ImageView
            android:id="@+id/xmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/x_xmas" />

        <ImageView
            android:id="@+id/xylo"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/x_xylo" />

    </LinearLayout>
    </ViewFlipper>
</RelativeLayout>