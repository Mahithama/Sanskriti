<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurseryclass.Unit3.nur_cylinder_3">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/numeral_onebg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="#FF5722"
            android:layout_height="wrap_content"
            android:text="Shapes 'Cylinder'."
            android:textSize="30sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#151515"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on all the cylindrical shaped pictures. "
            android:textSize="22sp" />

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextView"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/shapes_bg"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="wrap_content"
        android:id="@+id/framee1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cylinder_bg" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/framee1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/can"
            android:layout_width="85dp"
            android:layout_height="134dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/cylinder_1" />

        <ImageView
            android:id="@+id/vlc"
            android:layout_width="97dp"
            android:layout_height="145dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            app:srcCompat="@drawable/tri_2" />

        <ImageView
            android:id="@+id/juice"
            android:layout_width="82dp"
            android:layout_height="161dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/cylinder_2" />

        <ImageView
            android:id="@+id/melon"
            android:layout_width="89dp"
            android:layout_height="127dp"
            android:layout_marginLeft="140dp"
            app:srcCompat="@drawable/tri_1" />

        <ImageView
            android:id="@+id/casee"
            android:layout_marginTop="100dp"
            android:layout_width="155dp"
            android:layout_height="129dp"
            android:layout_marginLeft="250dp"
            app:srcCompat="@drawable/rectangle_4" />

    </FrameLayout>
    </LinearLayout>
    </ViewFlipper>

</RelativeLayout>