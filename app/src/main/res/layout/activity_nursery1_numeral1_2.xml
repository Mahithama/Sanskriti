<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unit1.Nursery.Nursery1_numeral1_2">


    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/numeral_onebg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="#FF5722"
            android:layout_height="wrap_content"
            android:text="Introducing numeral 1 and 2."
            android:textSize="30sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#151515"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read the instructions below and complete the activity. "
            android:textSize="22sp" />

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextView"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/numeral_onebg"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:fontFamily="@font/primer_print_bold"
        android:text="Introducing numeral 1 (One) "
        android:textColor="#000"
        android:textSize="25dp" />

    <FrameLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/box_1"
            android:layout_width="297dp"
            android:layout_marginTop="10dp"
            android:layout_height="230dp"
            app:srcCompat="@drawable/box_circ" />

        <ImageView
            android:id="@+id/box_2"
            android:layout_width="297dp"
            android:layout_height="230dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="350dp"
            app:srcCompat="@drawable/boxx_circ" />

        <ImageView
            android:id="@+id/blue_c"
            android:layout_width="64dp"
            android:layout_height="195dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="205dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/one_circ" />

        <ImageView
            android:id="@+id/bluee"
            android:layout_width="64dp"
            android:layout_height="195dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="205dp"
            app:srcCompat="@drawable/onee_circ" />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primer_print_bold"
            android:text="One"
            android:textColor="#000"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="100dp"
            android:textSize="70dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primer_print_bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="240dp"
            android:text="Tap on the blue colour to fill the number 1 (One) "
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primer_print_bold"
            android:gravity="center_horizontal"
            android:text="Tap on 1 (One) cookie "
            android:textAlignment="center"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="430dp"
            android:textColor="#000"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/jar"
            android:layout_width="93dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="460dp"
            android:layout_height="109dp"
            app:srcCompat="@drawable/jar_empty" />

        <ImageView
            android:id="@+id/jar_c"
            android:layout_width="93dp"
            android:layout_height="109dp"
            android:visibility="invisible"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="460dp"
            app:srcCompat="@drawable/jar_circ" />

        <ImageView
            android:id="@+id/cookie1"
            android:layout_width="49dp"
            android:layout_height="42dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.624"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.687"
            app:srcCompat="@drawable/cookie_one" />

        <ImageView
            android:id="@+id/cookie2"
            android:layout_width="49dp"
            android:layout_height="42dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="490dp"
            app:srcCompat="@drawable/cookie_two" />


        <ImageView
            android:id="@+id/cookie3"
            android:layout_width="49dp"
            android:layout_height="42dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="580dp"
            app:srcCompat="@drawable/cookie_three" />

        <ImageView
            android:id="@+id/blue"
            android:layout_width="29dp"
            android:layout_height="43dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="34dp"
            app:srcCompat="@drawable/blur_cir" />

        <ImageView
            android:id="@+id/orange"
            android:layout_width="29dp"
            android:layout_height="43dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ora_cir" />


        <ImageView
            android:id="@+id/green"
            android:layout_width="29dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="30dp"
            android:layout_height="43dp"
            app:srcCompat="@drawable/gre_cir" />


    </FrameLayout>
    </LinearLayout>
    </ViewFlipper>

</RelativeLayout>