<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juniorclass.unit1.Junior1_senses">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/numeral_onebg"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="#FF5722"
                android:layout_height="wrap_content"
                android:text="Sense organs."
                android:textSize="30sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#151515"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drag and drop the pictures to the correct body part."
                android:textSize="22sp" />

            <Button
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nextView"
                android:text="Next"
                tools:ignore="OnClick" />
        </LinearLayout>



        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/coloryellow"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/eye_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/sense_box"
            tools:layout_editor_absoluteX="15dp" />

        <ImageView
            android:id="@+id/eye_c_n"
            android:layout_width="120dp"
            android:visibility="invisible"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/eyee"
            tools:layout_editor_absoluteX="15dp" />

        <TextView
            android:id="@+id/aeye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primer_print_bold"
            android:textColor="#000"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:textSize="30dp"
            android:text="Eye"/>

        <ImageView
            android:id="@+id/nose_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/sense_box"
            tools:layout_editor_absoluteX="15dp" />

        <ImageView
            android:id="@+id/nose_c_n"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="120dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/nosee"
            tools:layout_editor_absoluteX="15dp" />
        <TextView
            android:id="@+id/anose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primer_print_bold"
            android:textColor="#000"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="150dp"
            android:textSize="30dp"
            android:text="Nose"/>

        <ImageView
            android:id="@+id/ear_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="240dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/sense_box"
            tools:layout_editor_absoluteX="15dp" />
        <ImageView
            android:id="@+id/ear_c_n"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="invisible"
            android:layout_marginLeft="240dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/earr"
            tools:layout_editor_absoluteX="15dp" />
        <TextView
            android:id="@+id/aear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primer_print_bold"
            android:textColor="#000"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="280dp"
            android:textSize="30dp"
            android:text="Ear"/>


        <ImageView
            android:id="@+id/hand_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="360dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/sense_box"
            tools:layout_editor_absoluteX="15dp" />

        <ImageView
            android:id="@+id/hand_c_n"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="invisible"
            android:layout_marginLeft="360dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/handd"
            tools:layout_editor_absoluteX="15dp" />

        <TextView
            android:id="@+id/askin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primer_print_bold"
            android:textColor="#000"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="400dp"
            android:textSize="30dp"
            android:text="Skin"/>

        <ImageView
            android:id="@+id/tounge_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="480dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/sense_box"
            tools:layout_editor_absoluteX="15dp" />

        <ImageView
            android:id="@+id/tounge_c_n"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="invisible"
            android:layout_marginLeft="480dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/toungee"
            tools:layout_editor_absoluteX="15dp" />

        <TextView
            android:id="@+id/atongue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primer_print_bold"
            android:textColor="#000"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="500dp"
            android:textSize="30dp"
            android:text="Tongue"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/drag_ear"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/earr" />

        <ImageView
            android:id="@+id/drag_hand"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/handd"
            tools:layout_editor_absoluteX="15dp" />

        <ImageView
            android:id="@+id/drag_tounge"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="240dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/toungee"
            tools:layout_editor_absoluteX="15dp" />

        <ImageView
            android:id="@+id/drag_nose"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="360dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/nosee"
            tools:layout_editor_absoluteX="15dp" />

        <ImageView
            android:id="@+id/drag_eye"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="480dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"
            app:srcCompat="@drawable/eyee"
            tools:layout_editor_absoluteX="15dp" />


    </FrameLayout>
    </LinearLayout>
    </ViewFlipper>


</RelativeLayout>


