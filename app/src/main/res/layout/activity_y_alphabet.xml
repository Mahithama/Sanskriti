<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurseryclass.Unit7.Y_alphabet">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/numeral_onebg"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="70dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                  Alphabet ' Y ' words \n\nTap on the pictures to know the names"
                android:textSize="30sp" />

            <Button
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nextView"
                android:text="Next"
                tools:ignore="OnClick" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/y_bg"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/yam"
            android:layout_width="165dp"
            android:layout_height="194dp"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/y_yam" />

        <ImageView
            android:id="@+id/yolk"
            android:layout_width="182dp"
            android:layout_height="155dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/y_yolk" />

        <ImageView
            android:id="@+id/yak"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-140dp"
            android:layout_marginTop="160dp"
            app:srcCompat="@drawable/y_yak" />

        <ImageView
            android:id="@+id/yarn"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/y_yarn" />

        <ImageView
            android:id="@+id/yacht"
            android:layout_width="212dp"
            android:layout_marginLeft="-190dp"
            android:layout_marginTop="180dp"
            android:layout_height="172dp"
            app:srcCompat="@drawable/y_yacht" />

    </LinearLayout>


</ViewFlipper>



    </RelativeLayout>