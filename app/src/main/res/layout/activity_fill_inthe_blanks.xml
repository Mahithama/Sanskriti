<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seniorkg.Unit6.Fill_inthe_blanks">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/sans_nav" />

    <FrameLayout
       android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/make_c"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*  Teacher asked me to __________ a card." />

        <TextView
            android:id="@+id/make_c_n"
            android:visibility="invisible"
            android:layout_marginLeft="280dp"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Make " />


        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/takes_c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*  Mother __________ me to park everyday." />

        <TextView
            android:layout_marginTop="60dp"
            android:visibility="invisible"
            android:textColor="@color/purple_700"
            android:layout_marginLeft="130dp"
            android:id="@+id/takes_c_n"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Takes" />

        <TextView
            android:layout_marginTop="120dp"
            android:id="@+id/lane_c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*  I walk from the __________ to my house." />

        <TextView
            android:layout_marginTop="120dp"
            android:visibility="invisible"
            android:layout_marginLeft="220dp"
            android:id="@+id/lane_c_n"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lane" />


        <TextView
            android:layout_marginTop="180dp"
            android:id="@+id/slate_c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*  At school, I love to write on the  __________." />

        <TextView
            android:layout_marginTop="180dp"
            android:visibility="invisible"
            android:layout_marginLeft="400dp"
            android:id="@+id/slate_c_n"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slate" />

        <TextView
            android:layout_marginTop="240dp"
            android:id="@+id/shape_c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*  Circle is my favourite  __________." />

        <TextView
            android:layout_marginTop="240dp"
            android:visibility="invisible"
            android:id="@+id/shape_c_n"
            android:layout_marginLeft="290dp"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shape" />
    </FrameLayout>

    <FrameLayout
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/drag_takes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" Takes "
    android:background="@color/creambg"
    android:textSize="25sp"
    android:textColor="@color/black"/>

        <TextView
            android:id="@+id/drag_make"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Make "
            android:background="@color/creambg"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/drag_lane"
            android:layout_marginLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Lane "
            android:background="@color/creambg"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/drag_slate"
            android:layout_marginLeft="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Slate "
            android:background="@color/creambg"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/drag_shape"
            android:layout_marginLeft="400dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Shape "
            android:background="@color/creambg"
            android:textSize="25sp"
            android:textColor="@color/black"/>




    </FrameLayout>


</RelativeLayout>