<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juniorclass.unit3.junior_count2_3">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/dinoframe1"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dino3_c"
            android:layout_width="210dp"
            android:layout_height="270dp"
            app:srcCompat="@drawable/dino3" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/dino3_c_n"
            android:layout_width="210dp"
            android:layout_height="270dp"
            app:srcCompat="@drawable/dino3_1" />

        <ImageView
            android:id="@+id/dino6_c"
            android:layout_marginLeft="210dp"
            android:layout_width="210dp"
            android:layout_height="270dp"
            app:srcCompat="@drawable/dino6" />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/dino6_c_n"
            android:layout_marginLeft="210dp"
            android:layout_width="210dp"
            android:layout_height="270dp"
            app:srcCompat="@drawable/dino6_1" />

        <ImageView

            android:id="@+id/dino4_c"
            android:layout_marginLeft="420dp"
            android:layout_width="210dp"
            android:layout_height="270dp"
            app:srcCompat="@drawable/dino4" />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/dino4_c_n"
            android:layout_marginLeft="420dp"
            android:layout_width="210dp"
            android:layout_height="270dp"
            app:srcCompat="@drawable/dino4_1" />

    </FrameLayout>



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/congo"
            android:visibility="invisible"
            android:layout_width="250dp"
            android:layout_height="196dp"
            app:srcCompat="@drawable/dino_good" />


    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/drag_dino1"
            android:layout_width="70dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/dinoo1" />

        <ImageView
            android:id="@+id/drag_dino4"
            android:layout_marginLeft="80dp"
            android:layout_width="70dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/dinoo4" />

        <ImageView
            android:id="@+id/drag_dino2"
            android:layout_marginLeft="160dp"
            android:layout_width="70dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/dinoo2" />

        <ImageView
            android:id="@+id/drag_dino3"
            android:layout_marginLeft="240dp"
            android:layout_width="70dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/dinoo3" />

        <ImageView
            android:id="@+id/drag_dino6"
            android:layout_marginLeft="320dp"
            android:layout_width="70dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/dinoo6" />

    </FrameLayout>


    <ImageView
        android:id="@+id/dino2_c_n"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dummy" />

    <ImageView
        android:id="@+id/dino1_c_n"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dummy" />
    <ImageView
        android:id="@+id/dino2_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dummy" />

    <ImageView
        android:id="@+id/dino1_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dummy" />


</RelativeLayout>