<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/o_bg"
    tools:context=".Nurseryclass.Unit5.O_alphabet">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/numeral_onebg"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="#FF5722"
                android:layout_height="wrap_content"
                android:text="Alphabet 'O'."
                android:textSize="30sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#151515"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap on all the ' O o ' letter words. "
                android:textSize="22sp" />

            <Button
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nextView"
                android:text="Next"
                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/o_bg"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/onion"
                android:layout_width="162dp"
                android:layout_height="141dp"
                android:layout_marginLeft="220dp"
                app:srcCompat="@drawable/o_onion" />


            <ImageView
                android:id="@+id/one"
                android:layout_width="146dp"
                android:layout_height="141dp"
                android:layout_marginLeft="450dp"
                android:layout_marginTop="200dp"
                app:srcCompat="@drawable/o_one" />

            <ImageView
                android:id="@+id/oct"
                android:layout_width="186dp"
                android:layout_height="162dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="170dp"
                app:srcCompat="@drawable/o_oct" />

            <ImageView
                android:id="@+id/owl"
                android:layout_width="210dp"
                android:layout_height="147dp"
                android:layout_marginLeft="390dp"
                app:srcCompat="@drawable/o_owl" />


            <ImageView
                android:id="@+id/orange"
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="130dp"
                app:srcCompat="@drawable/o_orange" />


        </FrameLayout>
    </LinearLayout>
</ViewFlipper>
    </RelativeLayout>