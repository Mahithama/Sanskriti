<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurseryclass.Unit4.Nur_m_4">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/numeral_onebg"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="#FF5722"
                android:layout_height="wrap_content"
                android:text="Alphabet 'M'."
                android:textSize="30sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#151515"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap on the pictures to know their names. "
                android:textSize="22sp" />

            <Button
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nextView"
                android:text="Next"
                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/m_bg"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/muffin"
                android:layout_width="174dp"
                android:layout_height="167dp"
                android:layout_marginLeft="150dp"
                app:srcCompat="@drawable/m1" />

            <ImageView
                android:id="@+id/monkey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="380dp"
                app:srcCompat="@drawable/m2" />

        </FrameLayout>


        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/frame1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mushroom"
                android:layout_width="174dp"
                android:layout_height="142dp"
                app:srcCompat="@drawable/m3" />

            <ImageView
                android:id="@+id/mittens"
                android:layout_width="146dp"
                android:layout_height="138dp"
                android:layout_marginLeft="240dp"
                app:srcCompat="@drawable/m4" />

            <ImageView
                android:id="@+id/motor"
                android:layout_width="221dp"
                android:layout_height="160dp"
                android:layout_marginLeft="405dp"
                app:srcCompat="@drawable/m6" />

        </FrameLayout>
    </LinearLayout>
</ViewFlipper>

    </RelativeLayout>