<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Juniorclass.unit1.Junior1_magicwords">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/numeral_onebg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="#FF5722"
            android:layout_height="wrap_content"
            android:text="Magic words."
            android:textSize="30sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#151515"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on the pictures to know where these words are used. "
            android:textSize="22sp" />

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextView"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/doodle_bgg"
        android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="653dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="38dp">


        <ImageView
            android:id="@+id/magic_one"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/magic_one"
            tools:layout_editor_absoluteX="104dp" />


        <ImageView
            android:id="@+id/magic_onet"
            android:layout_width="121dp"
            android:layout_height="49dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/magic_onet"
            tools:layout_editor_absoluteX="104dp" />

        <ImageView
            android:id="@+id/magic_two"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/magic_two"
            tools:layout_editor_absoluteX="104dp" />

        <ImageView
            android:id="@+id/magic_twot"
            android:layout_width="79dp"
            android:layout_height="54dp"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="35dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/magic_twot"
            tools:layout_editor_absoluteX="104dp" />

        <ImageView
            android:id="@+id/magic_three"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="425dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/magic_three"
            tools:layout_editor_absoluteX="104dp" />

        <ImageView
            android:id="@+id/magic_threet"
            android:layout_width="79dp"
            android:layout_height="54dp"
            android:layout_marginLeft="480dp"
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/magic_threet"
            tools:layout_editor_absoluteX="104dp" />


    </FrameLayout>
    </LinearLayout>
    </ViewFlipper>

</RelativeLayout>