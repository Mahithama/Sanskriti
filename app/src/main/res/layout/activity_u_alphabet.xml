<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurseryclass.Unit6.U_alphabet">
    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/numeral_onebg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="#FF5722"
            android:layout_height="wrap_content"
            android:text="Alphabet 'U'."
            android:textSize="30sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#151515"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on all the ' U u ' letter words. "
            android:textSize="22sp" />

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextView"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/u_bgg"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/uniform"
            android:layout_width="165dp"
            android:layout_height="194dp"
            android:layout_marginTop="130dp"
            app:srcCompat="@drawable/u_uniform" />

        <ImageView
            android:id="@+id/uni"
            android:layout_width="182dp"
            android:layout_height="155dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/u_uni" />

        <ImageView
            android:id="@+id/utensil"
            android:layout_width="153dp"
            android:layout_height="165dp"
            android:layout_marginLeft="-140dp"
            android:layout_marginTop="160dp"
            app:srcCompat="@drawable/u_utensil" />

        <ImageView
            android:id="@+id/urn"
            android:layout_width="157dp"
            android:layout_height="159dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/u_urn" />

        <ImageView
            android:id="@+id/umb"
            android:layout_width="205dp"
            android:layout_marginLeft="-160dp"
            android:layout_marginTop="170dp"
            android:layout_height="152dp"
            app:srcCompat="@drawable/u_umbrella" />

    </LinearLayout>

    </ViewFlipper>



    </RelativeLayout>