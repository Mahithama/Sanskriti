<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seniorkg.Unit6.Fill_inthe_blanks2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/sans_nav" />

    <FrameLayout
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/from_c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*  I got a cookie __________ the store." />

        <TextView
            android:visibility="invisible"
            android:id="@+id/from_c_n"
            android:layout_marginLeft="200dp"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From" />


        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/made_c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*  I  __________ a yummy snack." />

        <TextView
            android:visibility="invisible"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/made_c_n"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made" />



        <TextView
            android:layout_marginTop="120dp"
            android:id="@+id/under_c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*  My shoes are __________ the bed." />

        <TextView
            android:visibility="invisible"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="200dp"
            android:id="@+id/under_c_n"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under" />


        <TextView
            android:layout_marginTop="180dp"
            android:id="@+id/find_c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*  Did you __________ my red hat ?" />

        <TextView
            android:visibility="invisible"
            android:layout_marginTop="180dp"
            android:id="@+id/find_c_n"
            android:layout_marginLeft="150dp"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find" />

        <TextView
            android:layout_marginTop="240dp"
            android:id="@+id/your_c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*  Is that  __________ favourite book ?" />

        <TextView
            android:layout_marginTop="240dp"
            android:visibility="invisible"
            android:id="@+id/your_c_n"
            android:layout_marginLeft="130dp"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your" />
    </FrameLayout>

    <FrameLayout
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/drag_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" From "
            android:background="@color/creambg"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/drag_find"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Find "
            android:background="@color/creambg"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/drag_under"
            android:layout_marginLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Under "
            android:background="@color/creambg"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/drag_made"
            android:layout_marginLeft="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Made "
            android:background="@color/creambg"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/drag_your"
            android:layout_marginLeft="400dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Your "
            android:background="@color/creambg"
            android:textSize="25sp"
            android:textColor="@color/black"/>




    </FrameLayout>



</RelativeLayout>