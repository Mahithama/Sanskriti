<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seniorkg.Unit3.sr_blends_3">
    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/numeral_onebg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="#FF5722"
            android:layout_height="wrap_content"
            android:text="Consonant blends."
            android:textSize="30sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#151515"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag and drop the correct answer to its place. "
            android:textSize="27sp" />

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextView"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">


    <FrameLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dr"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/consonats_dr" />

        <ImageView
            android:id="@+id/dr_c"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="260dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/consonats_box" />
        <ImageView
            android:id="@+id/dr_c_n"
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="260dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/consonats_dr_2" />

        <ImageView
            android:id="@+id/tr"
            android:layout_width="225dp"
            android:layout_height="103dp"
            android:layout_marginLeft="340dp"
            app:srcCompat="@drawable/consonats_tr" />

        <ImageView
            android:id="@+id/tr_c"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="570dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/consonats_box" />

        <ImageView
            android:id="@+id/tr_c_n"
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="570dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/consonats_tr_2" />


        <ImageView
            android:id="@+id/br"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/consonats_br" />
        <ImageView
            android:id="@+id/br_c"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="260dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/consonats_box" />
        <ImageView
            android:id="@+id/br_c_n"
            android:layout_marginTop="180dp"
            android:visibility="invisible"
            android:layout_marginLeft="260dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/consonats_br_2" />

        <ImageView
            android:id="@+id/cl"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="170dp"
            app:srcCompat="@drawable/consonats_cl" />

        <ImageView
            android:id="@+id/cl_c"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="570dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/consonats_box" />
        <ImageView
            android:id="@+id/cl_c_n"
            android:visibility="invisible"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="570dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/consonats_cl_2" />

    </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
           android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/drag_br"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/consonats_br_1" />

            <ImageView
                android:id="@+id/drag_cl"
                android:layout_marginLeft="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/consonats_cl_1" />

            <ImageView
                android:id="@+id/drag_dr"
                android:layout_marginLeft="220dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/consonats_dr_1" />

            <ImageView
                android:id="@+id/drag_tr"
                android:layout_marginLeft="330dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/consonats_tr_1" />


        </FrameLayout>
    </LinearLayout>
    </ViewFlipper>

</RelativeLayout>