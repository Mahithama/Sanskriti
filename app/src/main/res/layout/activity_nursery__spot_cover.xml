<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creambg"
    tools:context=".Unit1.Nursery.Nursery_Spot_cover">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/numeral_onebg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="#FF5722"
            android:layout_height="wrap_content"
            android:text="Spot the differences."
            android:textSize="30sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#151515"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on the things which you don't find in second to first picture"
            android:textSize="22sp" />

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextView"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/spot_a"
            android:layout_width="290dp"
            android:layout_height="319dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.581"
            app:srcCompat="@drawable/spot_a" />


        <ImageView
            android:id="@+id/spot_b"
            android:layout_width="297dp"
            android:layout_height="343dp"
            android:layout_marginLeft="375dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.581"
            app:srcCompat="@drawable/spot_b" />

        <ImageView
            android:id="@+id/cloud"
            android:layout_width="68dp"
            android:layout_height="43dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/dummy"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="330dp" />

        <ImageView
            android:id="@+id/cloudd"
            android:layout_width="95dp"
            android:layout_height="65dp"
            android:visibility="invisible"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/spot_cloud"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="330dp" />

        <ImageView
            android:id="@+id/cap"
            android:layout_width="57dp"
            android:layout_height="47dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="130dp"
            app:srcCompat="@drawable/dummy"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="330dp" />

        <ImageView
            android:id="@+id/capp"
            android:layout_width="95dp"
            android:layout_height="65dp"
            android:visibility="invisible"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/spot_cap"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="330dp" />


        <ImageView
            android:id="@+id/tri"
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="205dp"
            app:srcCompat="@drawable/dummy"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="330dp" />

        <ImageView
            android:id="@+id/trii"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="180dp"
            app:srcCompat="@drawable/spot_tri"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="330dp" />


        <ImageView
            android:id="@+id/grass"
            android:layout_width="51dp"
            android:layout_height="62dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="205dp"
            app:srcCompat="@drawable/dummy"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="330dp" />

        <ImageView
            android:id="@+id/grasss"
            android:layout_width="80dp"
            android:visibility="invisible"
            android:layout_height="60dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="280dp"
            app:srcCompat="@drawable/spot_grass"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="330dp" />

    </FrameLayout>
    </LinearLayout>
    </ViewFlipper>


</RelativeLayout>